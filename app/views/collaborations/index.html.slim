h1 Collaborazioni
.row
  .col-md-2.menu-container
    = render 'left_menu'
  .col-md-10.artworks-container
    .container.row
      - @collaborations.each do |collaboration|
        .col-lg-4.artworks-panel
          h2= collaboration.typology
          p= collaboration.artist.name
          = link_to 'Mostra', collaboration_path(collaboration)
          = link_to 'Modifica', edit_collaboration_path(collaboration)
          = link_to 'Elimina', collaboration_path(collaboration),
            method: :delete,
            data: { confirm: "Sei sicuro di voler eliminare?" }
